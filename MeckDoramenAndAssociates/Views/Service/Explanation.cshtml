@model dynamic

@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/LandingLayout/_LandingLayout.cshtml";
}

<section class="banner products-banner">
    <div class="layer">

    </div>
</section>

<section class="products-title">
    <div class="container">
        <h3>
            <strong>
                @ViewData["name"]
            </strong>
        </h3>
    </div>
</section>

<section class="products-body" style="padding-top: 65px;">
    <div class="container">
        <ul class="row a">
            @*<li class="col-12 col-sm-4 col-md-3" data-aos="fade-up" data-aos-duration="800">
                    <figure style="background: url(UploadedFiles/Services/@ViewData["image"];">
                    </figure>
                </li>*@

            <li class="col-md-offset-1 col-md-10 col-md-offset-1" data-aos="fade-up" data-aos-duration="800" style="padding-bottom: 35px;">
                @*<h3 class="d-inline-block">@Html.DisplayFor(model => model.Name)</h3>*@

                <p>
                    @ViewData["body"]
                </p>
                <p style="padding-top: 20px; padding-bottom:10px;">
                    Some of the @ViewData["name"] are:
                </p>
                @foreach (SubService subservice in Model.SubService)
                {
                    <p> <span style="color: blue">=></span> <a asp-action="Explanation" asp-controller="SubService" asp-route-id="@subservice.SubServiceId"> @subservice.Name</a></p>
                }
            </li>
        </ul>
    </div>
</section>