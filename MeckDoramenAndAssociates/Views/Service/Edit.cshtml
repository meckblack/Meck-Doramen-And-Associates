@model MeckDoramenAndAssociates.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h2>
                <strong> EDIT SERVICE</strong>
            </h2>
        </div>
        <div class="box-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!--MODAL BODY-->
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Name</label>
                                <input class="form-control" asp-for="Name" placeholder="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label>Rating(%)</label>
                                <input asp-for="Rating" class="form-control " />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <label>Explanation</label>
                                <textarea asp-for="Explanation" class="form-control "></textarea>
                                <span asp-validation-for="Explanation" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Image"></label>
                                <input class="form-control" type="file" name="file" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--MODAL FOOTER-->
                <div class="modal-footer">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <input type="hidden" asp-for="ServiceId" />
                            <input type="hidden" asp-for="Image" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="DateCreated" />
                            <a class="btn btn-danger" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


