@model MeckDoramenAndAssociates.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-widget">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="~/UploadedFiles/News/@Html.DisplayFor(model => model.Image)" height="250px" width="300px" alt="Image" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p><b>Title:</b></p>
                            <p>@Html.DisplayFor(model => model.Title)</p>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <p><b>Body:</b></p>
                            <p>@Html.DisplayFor(model => model.Body)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
</div>