@model MeckDoramenAndAssociates.Models.Skills

@{
    ViewData["Title"] = "Edit Skill";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h2>
                EDIT SKILL
            </h2>
        </div>
        <div class="box-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input class="form-control" type="file" name="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input class="form-control" asp-for="Rating" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Explanation" class="control-label"></label>
                    <textarea class="form-control" asp-for="Explanation"></textarea>
                    <span asp-validation-for="Explanation" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="hidden" value="blank" asp-for="Image" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="DateCreated" />
                            <input type="hidden" asp-for="SkillsId" />
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index" asp-controller="Landing">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


