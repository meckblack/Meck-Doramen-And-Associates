@model MeckDoramenAndAssociates.Models.Skills

@{
    ViewData["Title"] = "View";
    Layout = null;
}

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-widget">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p><b>Name:</b></p>
                            <p>@Html.DisplayFor(model => model.Name)</p>
                        </div>
                        <div class="col=md-4">
                            <p><b>Rating:</b></p>
                            <p>@Html.DisplayFor(model => model.Rating)%</p>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <p><b>Explanation:</b></p>
                            <p>@Html.DisplayFor(model => model.Explanation)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
</div>