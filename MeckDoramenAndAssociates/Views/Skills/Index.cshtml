@model IEnumerable<MeckDoramenAndAssociates.Models.Skills>
@using MeckDoramenAndAssociates.Models.Enums

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
    var x = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        SKILLS
    </h1>
    <ol class="breadcrumb" style="padding-bottom: 10px">
        <li><a asp-controller="Admin" asp-action="Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">SKills</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    @if (TempData["skills"] != null)
    {
        if (TempData["notificationType"].Equals(NotificationType.Success.ToString()))
        {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["skills"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["skills"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
        {
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["skills"]
            </div>
        }

    }
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <a asp-action="Create" class="btn btn-primary btn pull-right"><i style="color: red;" class="fa fa-plus"></i> ADD</a>
        </div>
        <div class="box-body">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            Names
                        </th>

                        <th>
                            Ratings
                        </th>

                        <th>
                            Expanations
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @(x++)
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Rating
                            </td>
                            <td>
                                <div style="overflow: visible;"> @item.Explanation</div>
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" data-modal="" asp-action="View" asp-route-id="@item.SkillsId"><i class="fa fa-image "></i> View</a>
                                <a class="btn btn-info btn-sm" data-modal="" asp-action="Details" asp-route-id="@item.SkillsId"><i class="fa fa-book "></i> Detail</a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.SkillsId"><i class="fa fa-pencil-square-o "></i> Edit</a>
                                <a class="btn btn-danger btn-sm" data-modal="" asp-action="Delete" asp-route-id="@item.SkillsId"><i class="fa fa-trash-o "></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

<script src="~/Admin/bower_components/jquery/dist/jquery.js"></script>
<script src="~/Modal/Modal.js"></script>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>