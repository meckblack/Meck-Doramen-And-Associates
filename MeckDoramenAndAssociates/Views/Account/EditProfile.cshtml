@model MeckDoramenAndAssociates.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<!--MODAL HEADER-->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h2>
                <strong>
                    CHANGE PASSWORD
                </strong>
            </h2>
        </div>

        <div class="box-body">
            <form asp-action="EditProfile">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ApplicationUserId" type="hidden" />
                <input asp-for="Password" type="hidden" />
                <input asp-for="ConfirmPassword" type="hidden" />
                <input asp-for="RoleId" type="hidden" />
                <input asp-for="Role" type="hidden" />
                <input asp-for="DateCreated" type="hidden" />
                <input asp-for="CreatedBy" type="hidden" />


                <!--MODAL BODY-->
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <label>FIRST NAME</label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label>LAST NAME</label>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <label>EMAIL ADDRESS</label>
                                <input asp-for="Email" class="form-control" placeholder="EMAIL ADDRESS" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--MODAL FOOTER-->
                <div class="modal-footer">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="ViewProfile" asp-controller="Account" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


